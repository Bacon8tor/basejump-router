{
    "basejump": {
      "server": {
        "port": 8000,
        "bind": "0.0.0.0"
      },
      "environment": "environment.js",
      "settings": {
        "router": {
          "collections": {
            "route": [
              {
                "path": "/test/fellowship",
                "method": "get",
                "settings": {
                  "action": "params => r.db(\"test\").table(\"fellowship\")\n"
                }
              },
              {
                "path": "/test/fellowship/:species",
                "method": "get",
                "settings": {
                  "parameters": [
                    {
                      "in": "path",
                      "name": "species",
                      "type": "string",
                      "required": true
                    }
                  ],
                  "action": "params => r.db(\"test\").table(\"fellowship\").filter(params)\n"
                }
              },
              {
                "path": "/test/fellowship",
                "method": "post",
                "settings": {
                  "schema": "fellowshipMember",
                  "action": "params => r.expr(params) // r.db(\"test\").table(\"fellowship\").insert(params)\n"
                }
              }
            ]
          }
        },
        "schema": {
          "collections": {
            "schemas": [
              {
                "id": "fellowshipMember",
                "type": "object",
                "required": [
                  "name",
                  "species"
                ],
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "species": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        }
      }
    }
  }